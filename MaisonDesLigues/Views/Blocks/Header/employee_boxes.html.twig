<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-maroon">
            <div class="inner">
                <h3>
                    {% if employee.credits_left is not null %}
                        {{ employee.credits_left }}
                    {% else %}
                        0
                    {% endif %}
                </h3>
                <p>Crédits de formation restant</p>
            </div>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-purple">
            <div class="inner">
                <h3>
                    {% if employee.days_left is not null %}
                        {{ employee.days_left }}
                    {% else %}
                        0
                    {% endif %}
                </h3>
                <p>Jours de formation restant</p>
            </div>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>
                    {% if employee.daysAccumulated is not null %}
                        {{ employee.daysAccumulated }}
                    {% else %}
                        0
                    {% endif %}
                </h3>
                <p>Jours de formation cumulés en {{ "now"|date('Y') }}</p>
            </div>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>
                    {% if employee.creditsAccumulated is not null %}
                        {{ employee.creditsAccumulated }}
                    {% else %}
                        0
                    {% endif %}
                </h3>
                <p>Crédits de formation cumulés en {{ "now"|date('Y') }}</p>
            </div>
        </div>
    </div>
    <!-- ./col -->