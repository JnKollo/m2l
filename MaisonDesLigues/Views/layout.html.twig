<!DOCTYPE html>
<html>

<head>
    <title>M2L - {% block title %}{% endblock %}</title>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport"><!-- Bootstrap 3.3.6 -->
    <link href="Web/bootstrap/css/bootstrap.min.css" rel="stylesheet"><!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet"><!-- Ionicons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet"><!-- Theme style -->
    <link href="Web/dist/css/AdminLTE.css" rel="stylesheet">
    <link href="Web/dist/css/skins/skin-blue.min.css" rel="stylesheet">
    <link href="Web/css/style.css" rel="stylesheet">
    <link href="Web/plugins/bootstrap-slider/slider.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
</head>

<body class="class='hold-transition skin-blue sidebar-mini" >

<div class="wrapper">
    <!-- Main Header -->
    <header class="main-header">
        <!-- Logo -->
        <a class="logo navbar-fixed-top" href="index.php?controller=home&action=home"><!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-lg"><b>M2l</b></span>
        </a> <!-- Header Navbar -->
        <nav class="navbar navbar-fixed-top" role="navigation">
            <!-- Sidebar toggle button-->
            <div id="disconnect">
                <a href="index.php?controller=security&action=logout"><i class="fa fa-fw fa-sign-out"></i>Déconnexion</a>
            </div>
        </nav>
    </header><!-- Left side column. contains the logo and sidebar -->

    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image"><img alt="User Image" class="img-circle" src="{{ employee.image }}"></div>
                <div class="pull-left info">
                    <p> {{ employee.username }}</p><!-- Status -->
                    <p><span class="badge bg-maroon">{{ employee.credits_left ~ ' CF'}}</span> <span class="badge bg-purple">{{ employee.days_left ~ ' jours'}}</span></p>
                </div>
            </div><!-- search form (Optional) -->
            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                <li>
                    <a href="index.php?controller=home&action=home"><i class="fa fa-home"></i> <span>Page d'accueil</span></a>
                </li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-mortar-board"></i>
                        <span>Formations</span>
                        <span class="pull-right-container">
			              <i class="fa fa-angle-left pull-right"></i>
			            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="index.php?controller=formation&action=lists&filter=all"><i class="fa fa-circle-o"></i> Formations disponibles</a></li>
                        <li><a href="index.php?controller=formation&action=lists&filter=registered"><i class="fa fa-circle-o"></i> Historique des formations {{ "now"|date('Y') }}</a></li>
                        <li><a href="index.php?controller=search&action=index"><i class="fa fa-circle-o"></i> Rechercher une formation</a></li>
                    </ul>
                </li>
                {% if employee.manager_status %}
                    <li>
                        <a href="index.php?controller=team&action=index"><i class="fa fa-users"></i> <span>Gestion d'équipe</span></a>
                    </li>
                {% endif %}
            </ul><!-- /.sidebar-menu -->
        </section><!-- /.sidebar -->
    </aside>

    {% block breadcrumb %}{% endblock %}
    {% block content %}{% endblock %}

    <script src="Web/plugins/jQuery/jquery-2.2.3.min.js"></script> <!-- Bootstrap 3.3.6 -->
    <script src="Web/bootstrap/js/bootstrap.min.js"></script> <!-- AdminLTE App -->
    <script src="Web/dist/js/app.min.js"></script>
    <script src="Web/plugins/ionslider/ion.rangeSlider.min.js"></script>
    <script src="Web/plugins/bootstrap-slider/bootstrap-slider.js"></script>
    <script src="Web/script/main.js"></script>
    {% block script %}{% endblock %}
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            <a href="#">Mentions légales</a>
        </div><!-- Default to the left -->
        <strong>Copyright &copy; 2016 <a href="#">M2L</a>.</strong> Tous droits réservés.
    </footer>

</div><!-- ./wrapper -->
</body>

</html>